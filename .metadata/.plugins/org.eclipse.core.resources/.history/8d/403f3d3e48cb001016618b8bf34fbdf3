#include <avr/io.h>
#include <util/delay.h>

//Knfiguracja sprzêtowa: do portu B podpiête s¹ 4 diody do pinów 0-3

//Dobrze jest na pocz¹tku okreliæ po³¹czenia w poni¿szy sposób, w razie zmiany
//konfiguracji sprzêtowej ³atwiej jest zaminiæ dane w jednym miejscu ni¿ w 50 :)
#define LED_DIR DDRB
#define LED_P   PORTB

int main()
{
	uint8_t szybkosc = 2000;
	while(1)
	{
				//Inicjalizacja portów
					LED_DIR = 0x0F;
					LED_P = 0x00;

					//Zapal pierwsz¹ diodê
					LED_P ^= (1<<0);
					_delay_ms(szybkosc);

					//Zapal 3 diodê
					LED_P ^= (1<<1);
					_delay_ms(szybkosc);

					//Prze³¹cz (zgaœ) pierwsz¹ diodê
					LED_P ^= (1<<2);
					_delay_ms(szybkosc);

					// Zgaœ 3 diodê
					LED_P ^= (1<<3);
					_delay_ms(szybkosc);

					//Zapal pierwsz¹ diodê
					LED_P ^= (1<<0);
					_delay_ms(szybkosc);

					//Zapal 3 diodê
					LED_P ^= (1<<1);
					_delay_ms(szybkosc);

					//Prze³¹cz (zgaœ) pierwsz¹ diodê
					LED_P ^= (1<<2);
					_delay_ms(szybkosc);

					// Zgaœ 3 diodê
					LED_P ^= (1<<3);
					_delay_ms(szybkosc);

					//szybkosc = szybkosc - 200;

	}


}
